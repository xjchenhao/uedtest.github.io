@import 'base'

$ui-color-main = #998d71

.mid
  margin 0 auto
  width 70%
  .mobile &
    width 80%

.header
  background url("http://xjchenhao.b0.upaiyun.com/githubPage/hd-bg.jpg") repeat-x center top
  max-height 499px
  padding 50px 0
  .main
    overflow hidden
    text-align center
    .logo
      display inline-block
      width 160px
      height 160px
      -webkit-border-radius 100%
      -moz-border-radius 100%
      border-radius 100%
      border 4px solid #fff
      line-height 160px
      background-color #fff
      box-shadow 0 1px 2px rgba(0, 0, 0, 0.25)
      overflow hidden
      img {
        width 100%
      }
    .title
      font-size 50px
      letter-spacing 2px
      text-transform uppercase
      padding 10px 0
      line-height 1.2
      color #fff
    .subtitle
      font-size 18px
      display block
      color #fff
  .nav
    margin-top 70px
    border solid #fff
    border-width 3px 0 1px
    .mobile &
      display none
    ul
      text-align center
      padding 5px 0
      li
        display inline-block
        margin 0 10px
        a
          display block
          color #fff
          font-weight bold
        &.on
          a
            text-decoration underline

.main-con
  .work-experience
    .tit
      h3
        font-size 16px
        letter-spacing 3px
        color $ui-color-main
        &:after
          display block
          content ' '
          background $ui-color-main
          height 3px
          width 60px
          margin 15px 0
    .cont
      margin-top 30px
      li
        position relative
        border-left 2px dotted $ui-color-main
        padding 10px 35% 50px 5%
        .mobile &
          padding 10px 0 50px 5%
        &:last-child
          padding-bottom 10px
        &:before
          position absolute
          left 0
          top 0
          display block
          content ' '
          height 5px
          width 5px
          border 3px solid $ui-color-main
          background-color #fff
          -webkit-border-radius 100%
          border-radius 100%
          -webkit-transform translateX(-50%)
          transform translateX(-50%)
          margin-left -1px
        .company
          font-size 30px
        .time
          margin-top 10px
          font-size 16px
          color $ui-color-main
        .describe
          margin-top 20px
          font-size 16px
          color #555
          line-height 1.5
          word-break break-all
        .logo
          position absolute
          right 0
          top 30px
          width 25%
          padding 10px
          .mobile &
            display none
          img
            width 100%

  .blog-banner
    position: relative
    background url("http://xjchenhao.b0.upaiyun.com/githubPage/blog-banner.jpg") no-repeat center center
    background-size cover
    color #fff
    &:before
      content ' '
      display block !important
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      background rgba(0, 0, 0, 0.39)
    .main
      position relative
      display block
      text-align center
      padding 10% 0
      color #fff
      .title
        font-size 42px
      .subtitle
        display block
        margin-top 10px
        font-size 16px
        &:after
          display block
          content ' '
          height 3px
          width 60px
          margin 15px auto
          background-color #fff
  .skill
    .tit
      @extend .main-con .work-experience .tit
    .cont
      font-size 0
      line-height 0
      .professional-charts
        display: inline-block
        width 50%
        height 400px
        .mobile &
          width 100%
      .skill-charts
        display: inline-block
        width 50%
        height 400px
        .mobile &
          width 100%
